<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="ExploreServerRow" parent="GtkListBoxRow">
    <property name="child">
      <object class="GtkBox">
        <property name="spacing">10</property>
        <child>
          <object class="GtkLabel">
            <property name="xalign">0.0</property>
            <property name="hexpand">True</property>
            <binding name="label">
              <lookup name="name">
                <lookup name="server">ExploreServerRow</lookup>
              </lookup>
            </binding>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="remove_button">
            <binding name="visible">
              <closure type="gboolean" function="string_not_empty">
                <lookup name="server-string">
                  <lookup name="server">ExploreServerRow</lookup>
                </lookup>
              </closure>
            </binding>
            <property name="icon-name">close-symbolic</property>
            <property name="valign">center</property>
            <property name="halign">center</property>
            <property name="tooltip-text" translatable="yes">Remove Server</property>
            <style>
              <class name="circular"/>
              <class name="flat"/>
            </style>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
