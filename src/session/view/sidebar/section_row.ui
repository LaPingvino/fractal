<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="SidebarSectionRow" parent="AdwBin">
    <signal name="notify::parent" handler="update_expanded_accessibility_state" swapped="yes"/>
    <child>
      <object class="GtkBox">
        <property name="spacing">12</property>
        <child>
          <object class="GtkLabel" id="display_name">
            <property name="halign">start</property>
            <property name="hexpand">True</property>
            <property name="ellipsize">end</property>
            <property name="label" bind-source="SidebarSectionRow" bind-property="label" bind-flags="sync-create"/>
            <style>
              <class name="dimmed"/>
            </style>
          </object>
        </child>
        <child type="end">
          <object class="GtkStack" id="notification_status">
            <binding name="visible">
              <closure type="gboolean" function="invert_boolean">
                <closure type="gboolean" function="logical_or">
                  <lookup name="is-expanded">
                    <lookup name="section">SidebarSectionRow</lookup>
                  </lookup>
                  <lookup name="is-read">
                    <lookup name="section">SidebarSectionRow</lookup>
                  </lookup>
                </closure>
              </closure>
            </binding>
            <binding name="visible-child-name">
              <closure type="gchararray" function="ternary_string">
                <lookup name="has-notifications">
                  <lookup name="section">SidebarSectionRow</lookup>
                </lookup>
                <constant type="gchararray">notification-count</constant>
                <constant type="gchararray">highlight-dot</constant>
              </closure>
            </binding>
            <child>
              <object class="GtkStackPage">
                <property name="name">highlight-dot</property>
                <property name="child">
                  <object class="GtkImage" id="highlight_dot">
                    <accessibility>
                      <property name="label">Unread messages</property>
                    </accessibility>
                    <property name="halign">end</property>
                    <property name="icon-name">dot-symbolic</property>
                    <style>
                      <class name="dimmed"/>
                    </style>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="name">notification-count</property>
                <property name="child">
                  <object class="GtkLabel" id="notification_count">
                    <property name="hexpand">True</property>
                    <property name="halign">end</property>
                    <property name="valign">center</property>
                    <property name="yalign">1.0</property>
                    <binding name="label">
                      <lookup name="notification-count">
                        <lookup name="section">SidebarSectionRow</lookup>
                      </lookup>
                    </binding>
                    <style>
                      <class name="notification-count"/>
                    </style>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </child>
        <child type="end">
          <object class="GtkImage" id="arrow">
            <property name="icon-name">expander-arrow-symbolic</property>
            <property name="accessible-role">presentation</property>
            <style>
              <class name="arrow"/>
              <class name="dimmed"/>
            </style>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
