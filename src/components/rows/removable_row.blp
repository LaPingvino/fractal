using Gtk 4.0;
using Adw 1;

template $RemovableRow: Adw.ActionRow {
  selectable: false;

  Adw.Bin extra_suffix_bin {}

  $LoadingButton remove_button {
    content-icon-name: "close-symbolic";
    valign: center;
    halign: center;
    clicked => $remove() swapped;

    styles [
      "flat",
    ]
  }
}
